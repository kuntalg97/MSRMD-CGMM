@IF ( ${MIXED_CDFT_ACTIVE} == FALSE )
METHOD  QS
@ENDIF
&DFT
  @IF ( ${BECKE_ACTIVE} == TRUE )
    @include ${BECKE_FILE}
  @ENDIF
  @IF ( ${BECKE_ACTIVE} == FALSE )
    &QS
      METHOD  GPW
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-8
      MAP_CONSISTENT
      EXTRAPOLATION  ASPC
      EXTRAPOLATION_ORDER  4
    &END QS
  @ENDIF
  LSD
  &MGRID
   COMMENSURATE
   CUTOFF 400
   NGRIDS 5
  &END MGRID
  BASIS_SET_FILE_NAME GTH_BASIS_SETS
  POTENTIAL_FILE_NAME GTH_POTENTIALS
  @IF ( ${RESTART} == TRUE )
     WFN_RESTART_FILE_NAME ${WFN_FILE}
  @ENDIF
  MULTIPLICITY  1
  CHARGE  ${CHARGE}
  &SCF
    MAX_SCF  30
    EPS_SCF     9.9999999999999995E-07
    @IF ( ${RESTART} == TRUE )
      SCF_GUESS  RESTART
    @ENDIF
    @IF ( ${RESTART} == FALSE )
      SCF_GUESS ATOMIC
    @ENDIF
    &OT  T
      MINIMIZER  CG
      STEPSIZE     0.25
      PRECONDITIONER  FULL_ALL
      ENERGY_GAP     1.0000000000000000E-03
      ALGORITHM IRAC
    &END OT
    &OUTER_SCF  T
      EPS_SCF     9.9999999999999995E-07
      MAX_SCF  30
    &END OUTER_SCF
    &PRINT
      &RESTART ON
        FILENAME ./${NAME}
        BACKUP_COPIES 2
        COMMON_ITERATION_LEVELS 1
        &EACH
          JUST_ENERGY 1
          QS_SCF 0
        &END EACH
      &END RESTART
      &RESTART_HISTORY OFF
      &END RESTART_HISTORY
    &END PRINT
  &END SCF
  &XC
    DENSITY_CUTOFF     1.0000000000000000E-10
    GRADIENT_CUTOFF     1.0000000000000000E-10
    TAU_CUTOFF     1.0000000000000000E-10
    &XC_GRID
      XC_SMOOTH_RHO  SPLINE2
      XC_DERIV  SPLINE2_SMOOTH
    &END XC_GRID
    &XC_FUNCTIONAL 
      @IF ( ${XCFUNC} /= FALSE )
         &LIBXC
            FUNCTIONAL ${XCFUNC}
         &END LIBXC
      @ENDIF
      @IF ( ${XCFUNC} == FALSE )
         &LIBXC
            FUNCTIONAL ${CFUNC}
         &END LIBXC
         &LIBXC
            FUNCTIONAL ${XFUNC}
         &END LIBXC
      @ENDIF
    &END XC_FUNCTIONAL
    &HF
       &SCREENING
          EPS_SCHWARZ 1.0E-10
       &END
       @IF ( ${XCFUNC} == HYB_GGA_XC_WB97X )
          &INTERACTION_POTENTIAL
	 	   !  J. Chem. Phys. 128, 084106 (2008)
             POTENTIAL_TYPE MIX_CL
             SCALE_COULOMB   0.157706
             SCALE_LONGRANGE 0.842294
             OMEGA 0.30
          &END
       @ENDIF
       FRACTION  ${HF_FRACTION}
    &END 
  &END XC
  &POISSON
    PERIODIC  XYZ
    &EWALD
      EWALD_TYPE  SPME
      GMAX  20 20 20
    &END EWALD
  &END POISSON
  &PRINT
    &MULLIKEN ON
    &END MULLIKEN
    &LOWDIN ON
    &END LOWDIN
    @IF ( ${SAVE_CUBE} == TRUE )
      &E_DENSITY_CUBE ON
        ! Note the stride must be 1 1 1
        STRIDE 1 1 1
      &END E_DENSITY_CUBE
    @ENDIF
  &END PRINT
&END DFT
