&QS
  METHOD GPW
  EPS_DEFAULT 1.0E-12
  MAP_CONSISTENT
  EXTRAPOLATION ASPC
  EXTRAPOLATION_ORDER 4
  &CDFT
    TYPE_OF_CONSTRAINT BECKE
    ATOMIC_CHARGES  TRUE
    STRENGTH        ${BECKE_STR}
    TARGET          ${BECKE_TARGET}
    &ATOM_GROUP
      ! CL2
      ATOMS       6
      COEFF       1
      CONSTRAINT_TYPE CHARGE
      FRAGMENT_CONSTRAINT ${BECKE_FRAG_CONSTRAINT}
    &END ATOM_GROUP
    FRAGMENT_A_FILE      ${BECKE_FRAG_A}
!    FRAGMENT_A_SPIN_FILE ${BECKE_FRAG_A_SPIN}
    FRAGMENT_B_FILE      ${BECKE_FRAG_B}
!    FRAGMENT_B_SPIN_FILE ${BECKE_FRAG_B_SPIN}
    &DUMMY_ATOMS
      ATOMS       1..5
    &END DUMMY_ATOMS
    &OUTER_SCF ON
      EPS_SCF 1.0E-3
      MAX_SCF 50
      TYPE CDFT_CONSTRAINT
      EXTRAPOLATION_ORDER 2
      OPTIMIZER NEWTON_LS
      STEP_SIZE -1.0
      &CDFT_OPT ON
         MAX_LS 20
         CONTINUE_LS
         FACTOR_LS 0.5
         JACOBIAN_STEP 1.0E-2
         JACOBIAN_FREQ 1 1
         JACOBIAN_TYPE FD1
         JACOBIAN_RESTART FALSE
      &END CDFT_OPT
    &END
    &BECKE_CONSTRAINT
      @IF ( ${BECKE_USE_RADII} == FALSE )
        ADJUST_SIZE     FALSE
      @ENDIF
      @IF ( ${BECKE_USE_RADII} == TRUE )
        ADJUST_SIZE     TRUE
        ! covalent radii (Pyykkö & Atsumi Chem. Eur. J.2009,15, 186 – 197)
	! C Cl H   (KG system)
        ATOMIC_RADII  0.75 0.99 0.32 
      @ENDIF
      CAVITY_CONFINE  TRUE
      CAVITY_SHAPE    VDW
      CAVITY_PRINT    FALSE
      CUTOFF_TYPE     ELEMENT
      ELEMENT_CUTOFF  7.0 7.0 7.0
      IN_MEMORY       TRUE
      EPS_CAVITY      1.0E-7
      SHOULD_SKIP     TRUE
    &END BECKE_CONSTRAINT
    &PROGRAM_RUN_INFO ON
      &EACH
        QS_SCF 1
      &END EACH
      COMMON_ITERATION_LEVELS 2
      ADD_LAST NUMERIC
      FILENAME ./${NAME}
    &END PROGRAM_RUN_INFO
  &END CDFT
&END QS
